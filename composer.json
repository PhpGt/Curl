{
	"name": "phpgt/curl",
	"description": "cURL object wrapper.",
	"type": "library",

	"require": {
		"php": ">=8.1",
		"ext-curl": "*",
		"ext-json": "*",
		"phpgt/json": "^1.2"
	},

	"require-dev": {
		"phpstan/phpstan": "^1.9",
		"phpunit/phpunit": "^10.0",
		"phpmd/phpmd": "^2.13"
	},

	"license": "MIT",

	"authors": [
		{
			"name": "Greg Bowler",
			"email": "greg.bowler@g105b.com"
		}
	],

	"autoload": {
		"psr-4": {
			"Gt\\Curl\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Curl\\Test\\": "./test/phpunit"
		}
	},

	"keywords": [
		"curl",
		"curl_multi",
		"interface",
		"http"
	],

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
