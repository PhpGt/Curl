{
	"name": "phpgt/curl",
	"description": "cURL object wrapper.",
	"type": "library",

	"require": {
		"php": ">=8.1",
		"ext-curl": "*",
		"ext-json": "*",
		"phpgt/json": "^1.2"
	},

	"require-dev": {
		"phpstan/phpstan": "^1.9",
		"phpunit/phpunit": "^10.0",
		"phpmd/phpmd": "^2.13",
		"squizlabs/php_codesniffer": "^3.7"
	},

	"license": "MIT",

	"authors": [
		{
			"name": "Greg Bowler",
			"email": "greg.bowler@g105b.com"
		}
	],

	"autoload": {
		"psr-4": {
			"Gt\\Curl\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Curl\\Test\\": "./test/phpunit"
		}
	},

	"keywords": [
		"curl",
		"curl_multi",
		"interface",
		"http"
	],

	"scripts": {
		"phpunit": "vendor/bin/phpunit -c test/phpunit/phpunit.xml",
		"codesniffer": "vendor/bin/phpcs --standard=ruleset-codesniffer.xml src",
		"phpmd": "vendor/bin/phpmd src/ text ruleset-phpmd.xml",
		"phpstan": "vendor/bin/phpstan analyse src/"
	},

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
